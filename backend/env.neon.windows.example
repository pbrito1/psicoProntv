# Configuração do NeonDB para Windows - PsicoPront
# Substitua os valores abaixo pelos seus dados do NeonDB

# String de conexão do NeonDB (obrigatório)
# Formato: postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL="postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require"

# Configuração do Servidor
PORT=3000

# Configuração CORS
CORS_ORIGIN="http://localhost:5173"

# Configuração JWT (obrigatório para produção)
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_EXPIRES_IN="24h"

# Configuração de Refresh Token (obrigatório para produção)
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-here-change-this-in-production"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Configuração Redis (opcional)
REDIS_URL="redis://localhost:6379"

# Configuração de Logs
LOG_LEVEL="info"

# Configurações adicionais para NeonDB
# Pool de conexões
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Configurações de SSL (NeonDB requer SSL)
DATABASE_SSL_MODE="require"
DATABASE_SSL_CA=""
DATABASE_SSL_CERT=""
DATABASE_SSL_KEY=""
